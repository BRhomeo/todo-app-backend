{
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020"
    }
  },
  "compilerOptions": {
    "noImplicitReturns": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "lib": ["esnext.asynciterable"],
    "types": ["node"],
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": ["src", "src/type/index.d.ts"]
}
